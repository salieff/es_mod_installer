#!/bin/sh

set -e
# chown -R mobile.staff /Applications/ESManager.app

echo -ne 'Everlasting Summer installation folder: '
/Applications/ESManager.app/ESManager --find-es-path 2>/dev/null

ES_MODS_PATH="$( /Applications/ESManager.app/ESManager --find-es-path 2>/dev/null )"
chown -R mobile "$ES_MODS_PATH"

su mobile -c uicache
